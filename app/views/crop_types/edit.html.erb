<div class="container">
  <div class="box text-center col-8">
    <h2 class="green spacing-below">Edit this crop</h2>
    <%= simple_form_for @crop_type, url: crop_type_path(@crop_type) do |f| %>
      <h4 class="green spacing-below"><%= f.input :name %></h4>
      <div class="notes-input spacing-below"><%= f.rich_text_area :notes %></div>
      <%= f.submit 'Save', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
