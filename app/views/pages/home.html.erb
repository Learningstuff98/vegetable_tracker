<div class="container">
  <div class="box text-center col-8">
    <% if current_user %>
      <h3 class="green spacing-below"><%= "Currently logged in as #{current_user.email}" %></h3>
      <h3><%= button_to("Log Out", destroy_user_session_path, method: :delete, class: "btn btn-success") %></h3>
    <% else %>
      <h3 class="spacing-below"><%= link_to "Log in", new_user_session_path, class: "btn btn-success" %></h3>
      <h3><%= link_to "Sign up", new_user_registration_path, class: "btn btn-success" %></h3>
    <% end %>
  </div>
</div>
